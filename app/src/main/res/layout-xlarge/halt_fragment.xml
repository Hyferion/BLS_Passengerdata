<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bls.bls_boats.main.Journey.JourneyActivity"
    android:background="@drawable/main_header">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/linie_name_text"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Linie:"
                android:textSize="50sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/linie_name"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text=""
                android:textSize="50sp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textColor="@color/black"/>

        </TableRow>
        <TableRow
            android:layout_marginTop="20sp">
            <TextView
                android:id="@+id/stationText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Station"
                android:textSize="30sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/halt_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:textSize="50sp"
                android:textAlignment="textEnd"
                android:textColor="@color/black"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="20sp">


            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passagiere"
                android:textSize="30sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/current_total"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="0"
                android:textSize="30sp"
                android:textAlignment="textEnd"
                android:textColor="@color/black"/>
        </TableRow>
        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#000"/>

        <TableRow
            android:layout_marginTop="40sp"
            >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:text="Aussteiger"
                android:textSize="45sp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/ausgestiegen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:ems="10"
                android:inputType="number"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="50sp"
                android:textStyle="bold" />
        </TableRow>
        <TableRow android:layout_marginTop="40sp">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Einsteiger"
                android:textSize="45sp"
                android:layout_weight=".6"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/eingestiegen"
                android:layout_weight=".4"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:ems="10"
                android:inputType="number"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="50sp"
                android:textStyle="bold"
                />
        </TableRow>

        <TableRow android:layout_marginTop="40sp">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Angefahren"
                android:textSize="40sp"
                android:textColor="@color/black"/>

            <CheckBox
                android:id="@+id/bedient"
                android:layout_gravity="center"
                android:checked="false"
                android:switchTextAppearance="@style/TextAppearance.AppCompat" />

        </TableRow>
        <TableRow
            android:layout_marginTop="40sp">
            <TextView
                android:id="@+id/reasonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grund:"
                android:textSize="40sp"
                android:layout_weight="1"
                android:textColor="@color/black"/>
            <Spinner
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textMultiLine" />
        </TableRow>


    </TableLayout>
</android.support.constraint.ConstraintLayout>
