<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bls.bls_boats.main.Journey.JourneyActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/linie_name"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Linie:"
                android:textSize="25sp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/Boat_name"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="25sp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/halt_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Haltestelle:"
                android:textSize="25sp" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ausgestiegen:"
                android:textSize="23sp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/ausgestiegen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="4"
                android:inputType="number"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zugestiegen:"
                android:textSize="23sp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/eingestiegen"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:ems="4"
                android:inputType="number"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </TableRow>

        <TableRow>
            <Spinner
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textMultiLine" />
        </TableRow>
        <TableRow>
            <CheckBox
                android:id="@+id/bedient"
                android:layout_weight="1"
                android:checked="false"
                android:switchTextAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Haltestelle nicht bedienbar"
                android:textSize="20sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Momentan an Board"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/current_total"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="0"
                android:textSize="15sp"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>
